# Environment Variables for MRhappy Backend
# Copy this file to .env and fill in your actual values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# MongoDB Connection String
# For your MongoDB Compass setup:
MONGODB_URI=mongodb://localhost:27017/mrhappy_db

# For MongoDB Atlas (Recommended for production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mrhappy_db?retryWrites=true&w=majority

# For Local MongoDB (default port):
# MONGODB_URI=mongodb://localhost:27017/mrhappy_db

# Database Name
DB_NAME=mrhappy_db

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# Environment Mode
NODE_ENV=development

# Server Configuration
PORT=5000
HOST=localhost

# API Configuration
API_PREFIX=/api/v1

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================

# JWT Secret Keys (Generate strong random strings for production)
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-here
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-here

# JWT Expiration Times
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Security
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here

# ==========================================
# EMAIL CONFIGURATION
# ==========================================

# Email Service Provider (SendGrid, Mailgun, etc.)
EMAIL_PROVIDER=sendgrid

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@mrhappy.com
SENDGRID_FROM_NAME=MRhappy Restaurant

# SMTP Configuration (Alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ==========================================
# PAYMENT GATEWAY CONFIGURATION
# ==========================================

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox  # sandbox or live

# ==========================================
# FILE UPLOAD & STORAGE
# ==========================================

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Cloud Storage (AWS S3, Cloudinary, etc.)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=mrhappy-uploads

# ==========================================
# EXTERNAL SERVICES
# ==========================================

# Google Maps API (for delivery tracking)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Logging Level
LOG_LEVEL=info

# Error Tracking (Sentry)
SENTRY_DSN=your-sentry-dsn

# Monitoring (New Relic, DataDog)
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# ==========================================
# CORS & SECURITY
# ==========================================

# Allowed Origins (Frontend URLs)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15  # minutes

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Enable detailed logging in development
DEBUG=mrhappy:*

# Database seeding
SEED_DATABASE=true

# Mock external services in development
MOCK_PAYMENTS=true
MOCK_SMS=true
MOCK_EMAIL=true

# ==========================================
# PRODUCTION SETTINGS
# ==========================================

# SSL/HTTPS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Cluster Configuration
CLUSTER_WORKERS=4

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
